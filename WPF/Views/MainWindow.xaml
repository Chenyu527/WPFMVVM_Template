<Window x:Class="WPF.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800" >



    <Window.Background>
        <LinearGradientBrush EndPoint="0.1,0.9" StartPoint="0.9,0.9">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF074A4C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#FF828282" BorderThickness="2" Grid.Column="0" Width="400" Height="400"/>
        <Image Grid.Column="0" Width="400" Height="400" />

        <Grid Grid.Column="1">
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"/>

        </Grid>
    </Grid>
    
</Window>

